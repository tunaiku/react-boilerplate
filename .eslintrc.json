{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["react-app", "plugin:import/errors"],
  "plugins": ["react", "jsx-a11y", "import", "react-hooks"],
  "rules": {
    "no-console": "off",
    "max-len": "off",
    "react-hooks/rules-of-hooks": "error",
    "react/jsx-filename-extension": "off",
    "comma-dangle": "off",
    "import/no-unresolved": "off",
    "jsx-a11y/href-no-hash": [0],
    "react-app/jsx-a11y/href-no-hash": "off"
  }
}
